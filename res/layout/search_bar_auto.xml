<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/InputLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/TranslationInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ClearInput"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/ClearInput"
        android:hint="@string/hint_enter_word"
        android:imeOptions="actionDone"
        android:paddingRight="40dip"
        android:selectAllOnFocus="true" />

    <ProgressBar
        android:id="@+id/ProgressBarSearchAsYouType"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/TranslationInput"
        android:layout_alignRight="@id/TranslationInput"
        android:layout_alignTop="@id/TranslationInput"
        android:layout_margin="10dp"
        android:focusable="false"
        android:indeterminate="true"
        android:maxHeight="16dip"
        android:maxWidth="16dip"
        android:minHeight="16dip"
        android:minWidth="16dip"
        android:pivotX="50%" android:pivotY="50%"
        android:visibility="gone" />

    <ImageButton
        android:id="@id/ClearInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:maxWidth="60dip"
        android:minWidth="60dip"
        android:src="@android:drawable/ic_input_delete" />

</RelativeLayout>