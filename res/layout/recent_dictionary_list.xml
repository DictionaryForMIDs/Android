<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="vertical"
	android:layout_height="fill_parent">
	<TextView android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/TextViewExternalStorageInaccessible"
		android:text="@string/msg_external_storage_inaccessible"
		android:gravity="center_horizontal" android:textColor="#ffff00"></TextView>
	<ListView android:id="@android:id/list" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_weight="1">
	</ListView>
	<TextView android:id="@android:id/empty"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_weight="1" android:gravity="center"
		android:text="@string/no_recent_dictionaries" android:clickable="true" />
</LinearLayout>
