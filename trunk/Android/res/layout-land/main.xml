<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:layout_height="wrap_content"
		android:animationCache="false" android:layout_width="fill_parent"
		android:layout_weight="1" android:id="@+id/HeadingLayout"
		android:orientation="horizontal" android:layout_marginTop="10sp">
		<ImageView android:id="@+id/ImageView01"
			android:layout_height="wrap_content" android:src="@drawable/logo"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:scaleType="center"></ImageView>
		<TextView android:id="@+id/TextView01" android:textSize="25sp"
			android:gravity="center" android:layout_height="wrap_content"
			android:text="@string/app_name" android:layout_gravity="center"
			android:layout_margin="10sp" android:layout_weight="4"
			android:layout_width="wrap_content"></TextView>
	</LinearLayout>

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/InputLayout">
		<RelativeLayout android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_weight="1">
			<EditText android:layout_height="wrap_content" android:id="@+id/TranslationInput"
				android:minWidth="50px" android:layout_width="fill_parent"
				android:hint="@string/hint_enter_word" android:selectAllOnFocus="true"
				android:imeOptions="actionDone" android:maxLines="1"
				android:paddingRight="40dip"></EditText>
			<ProgressBar android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:id="@+id/ProgressBarSearchAsYouType"
				android:layout_centerVertical="true" android:layout_alignParentRight="true"
				android:indeterminate="true" android:layout_marginRight="10dip"
				android:focusable="false" android:maxHeight="25dip" android:maxWidth="25dip"
				android:minHeight="25dip" android:minWidth="25dip" android:visibility="gone"
				style="@android:style/Widget.ProgressBar.Inverse"></ProgressBar>
		</RelativeLayout>
		<ImageButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/ic_btn_search"
			android:id="@+id/StartTranslation" android:paddingLeft="30sp"
			android:paddingRight="30sp"></ImageButton>
	</LinearLayout>
	
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:id="@+id/selectLanguagesLayout">
		<Spinner android:layout_width="wrap_content" android:id="@+id/selectLanguages"
			android:layout_weight="1" android:layout_height="fill_parent"></Spinner>
		<ImageButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/swapLanguages"
			android:src="@drawable/ic_menu_revert" android:paddingLeft="30sp"
			android:paddingRight="30sp"></ImageButton>
	</LinearLayout>
	
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/output"
		android:textSize="15sp" />
	<ListView android:id="@+id/translationsListView"
		android:layout_width="fill_parent" android:layout_weight="1"
		android:layout_height="wrap_content"></ListView>
</LinearLayout>
